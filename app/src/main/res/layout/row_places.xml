<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_bottom_8"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dashboard_wisata_image"
            android:layout_width="175dp"
            android:layout_height="125dp"
            android:background="@color/colorPrimaryDark"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:padding="@dimen/margin_left_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/places_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul"
                android:textColor="#000"
                android:textSize="24sp"/>

            <RatingBar
                android:id="@+id/places_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:rating="4.5"
                android:stepSize="0.2"
                android:isIndicator="true" />

            <TextView
                android:id="@+id/places_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#bababa"
                android:maxLength="40"
                android:text="lorem ipsum dolor sit amet hiya gtwessd" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>